{% extends 'base.html.twig' %}

{% block title %}Le tuto
{% endblock %}

{% block body %}

	<section class="py-5 text-center container">
		<div class="row py-lg-5">
			<div class="col-lg-6 col-md-8 mx-auto">
				<h1 class="fw-light">{{ tuto.name }}</h1>
				<img width="100%" src="/uploads/{{ tuto.image }}"/>
				<p class="lead text-body-secondary">{{ tuto.description | raw }}</p>
				<p>
					<a href="{{ tuto.link }}" target="_blank" class="btn btn-primary my-2">Acheter le tuto</a>
					<a href="#" class="btn btn-secondary my-2">En savoir plus</a>
				</p>
			</div>
			<h2>Trailer</h2>
			<div class="test-center iframe-container">
                <iframe 
                    width="560" 
                    height="315" 
                    src="{{ tuto.video | replace({'watch': 'embed', '?v=': '/'}) }}" title="{{ tuto.name }}" 
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen>
                </iframe>
			</div>
		</div>
	</section>

{% endblock %}
